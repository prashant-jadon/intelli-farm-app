<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageActivity">

<LinearLayout
    android:id="@+id/layouttop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_alignParentTop="false"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="intelli-Farm"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/logo"/>
</LinearLayout>

    <TextView
        android:id="@+id/selectlanguagecap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Language"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layouttop"
        android:textSize="20dp"
        android:fontFamily="monospace"
        android:textColor="@color/black"/>

    <!-- activity_main.xml -->


    <ScrollView
        android:id="@+id/scrolllanguage"
        android:layout_marginTop="20dp"
        android:layout_below="@id/selectlanguagecap"
        android:layout_width="match_parent"
        android:layout_height="480dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/black"/>

            <RadioButton
                android:id="@+id/radioButtonEnglish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:text="English" />

            <RadioButton
                android:id="@+id/radioButtonHindi"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Spanish" />

            <RadioButton
                android:id="@+id/radioButtonFrench"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French" />
            <RadioButton
                android:id="@+id/radioButtonSpanish"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Spanish" />
            <RadioButton
                android:id="@+id/radioButtonGerman"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="German" />
            <RadioButton
                android:id="@+id/radioButtonChinese"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chinese" />

            <RadioButton
                android:id="@+id/radioButtonJapanese"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Japense" />
            <RadioButton
                android:id="@+id/radioButtonArabic"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Arabic" />

            <RadioButton
                android:id="@+id/radioButtonRussian"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Russian" />
            <RadioButton
                android:id="@+id/radioButtonPortuguese"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Portugesee" />
            <RadioButton
                android:id="@+id/radioButtonItalian"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Italian" />

            <RadioButton
                android:id="@+id/radioButtonItalian2"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Italian" />
            <RadioButton
                android:id="@+id/radioButtonItalian3"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Italian" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/languageSelectButton"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#89C680"
        android:gravity="center"
        android:text="Next"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scrolllanguage"/>


</RelativeLayout>