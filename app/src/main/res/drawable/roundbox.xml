<!-- rounded_edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" /> <!-- Background color of the EditText -->
    <stroke
        android:width="2dp"
    android:color="#2CE60D" /> <!-- Border color (green in this case) -->
    <corners android:radius="10dp" /> <!-- Adjust the radius to change the roundness of corners -->
</shape>
